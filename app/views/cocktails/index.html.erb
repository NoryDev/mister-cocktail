<div class="padded">
  <h1>All our cocktails</h1>

  <ul class="list-inline text-center">
  <% if @cocktails
    @cocktails.reverse.each do |cocktail| %>
    <li>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="thumb-titled">
          <%= image_tag cocktail.picture.url(:thumb) %>
          <p class="text-center legend"><%= cocktail.name %></p>
        </div>
      <% end %>
    </li>
  <% end
    end %>
  </ul>
</div>


<div class="padded">
  <h4>Add new cocktail</h4>

  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :picture, as: :file %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>

