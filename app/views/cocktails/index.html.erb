<h1>All our cocktails</h1>

<ul>
<% if @cocktails
  @cocktails.each do |cocktail| %>
  <%= link_to cocktail_path(cocktail) do %>
    <li><%= cocktail.name %></li>
  <% end %>
<% end
  end %>
</ul>


<h4>Add new cocktail</h4>

<%= simple_form_for(@cocktail) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

